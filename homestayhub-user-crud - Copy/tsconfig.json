{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "resolveJsonModule": true, 
    "noImplicitAny": true,
     "experimentalDecorators": true,
    "emitDecoratorMetadata": true
 
  },
  "ts-node": {
    "esm": true
  }
}